<tr>
    <td width="40%">
      <%= link_to tour.title, tour %>
    </td>
    <td>
      <%= link_to "Book", '#', class: "btn btn-mini btn-primary" %>
      <%= link_to "Details", '#', class: "btn btn-mini btn-info" %>
      <%= link_to "Cancel", '#', class: "btn btn-mini btn-danger" %>
    </td>
    <td>
      <%= tour.tour_date %>
    </td>
    <td style="text-align: center">
      <%= ChronicDuration.output(tour.duration, format: :short) %>
    </td>
    <td style="text-align: center">
      <%= tour.total_seats %>
    </td>
    <td style="text-align: center">
      <%= tour.available_seats %>
    </td>
    <td>
      <%= humanized_money_with_symbol tour.price_cents %>
    </td>
</tr>