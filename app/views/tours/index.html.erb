<% provide(:title, 'Tour Listing') %>
<h1>Tour Listing</h1>

<%= will_paginate %>

<% if signed_in? && current_user.admin? %>
  <%= link_to "Add Tour", '#', class: "btn btn-primary",
                               style: "float: right;"%>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th>Date</th>
      <th>Duration</th>
      <th>Total Seats</th>
      <th>Rem. Seats</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <%= render @tours %>
  </tbody>
</table>

<%= will_paginate %>